<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true" >
    <shape android:shape="rectangle">
      <solid android:color="#a0c0c0c0" />
      <stroke
        android:width="1.4dp"
        android:color="#99999999" />
      <corners
        android:radius="6dp" />
      <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp" />
    </shape>
  </item>

  <item android:state_focused="true" >
    <shape android:shape="rectangle">
      <solid android:color="#a0c0c0c0" />
      <stroke
        android:width="1.4dp"
        android:color="#99999999" />
      <corners
        android:radius="6dp" />
      <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp" />
    </shape>
  </item>

  <item>        
    <shape android:shape="rectangle">
      <solid android:color="#90000000" />
      <stroke
        android:width="1.4dp"
        android:color="#666666" />
      <corners
        android:radius="6dp" />
      <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp" />
    </shape>
  </item>

</selector>

