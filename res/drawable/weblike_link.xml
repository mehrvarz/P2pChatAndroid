<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true" >
    <shape android:shape="rectangle">
      <solid android:color="#00000000" />
      <corners
        android:radius="6dp" />
      <stroke
        android:width="1.4dp"
        android:color="#c0ffffff" />
      <padding
        android:left="6dp"
        android:right="6dp"
        android:top="3dp"
        android:bottom="3dp" />
    </shape>
  </item>

  <item android:state_focused="true" >
    <shape android:shape="rectangle">
      <solid android:color="#00000000" />
      <corners
        android:radius="6dp" />
      <stroke
        android:width="1.4dp"
        android:color="#c0ffffff" />
      <padding
        android:left="6dp"
        android:right="6dp"
        android:top="3dp"
        android:bottom="3dp" />
    </shape>
  </item>

  <item>        
    <shape android:shape="rectangle">
      <solid android:color="#00000000" />
      <!--stroke
